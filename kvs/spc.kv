#: import hex kivy.utils.get_color_from_hex


<SpcScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/backgrounds/wallpaper_spc.jpg'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            id: TOOLBAR
            padding: 5
            spacing: 5
            size_hint_y: 10
            md_bg_color: hex('#153788')
            orientation: 'horizontal'

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: 5
                padding: 10, 0, 0, 0

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 0.5

                    Image:
                        source: "images/logo/logo-toolbar.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: None
                        size_hint_x: None
                        width: self.parent.width
                        height: self.parent.width/self.image_ratio

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 0.1

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 0.6

                    MDLabel:
                        text: 'SOLICITAÇÃO DE SPC'
                        color: 'white'
                        bold: True
                        halign: "center"
                        font_size: '30sp'

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: 5

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 0.9
                    spacing: 50

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.4

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.5

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.1

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 0.1

                    MDIconButton:
                        icon: "arrow-left"
                        theme_icon_color: "Custom"
                        icon_color: "white"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: root.backScreen()

        MDBoxLayout:
            id: DATA_TABLE
            orientation: 'vertical'
            size_hint_y: 70

            MDBoxLayout:
                id: TITULO_DAS_TABELAS
                orientation: 'horizontal'
                size_hint_y: 5
                spacing: 20
                padding: 20, 10, 0, 0

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 65

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 33

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 33
                        radius: 10

                        MDLabel:
                            text: 'SOLICITAÇÕES PENDENTES'
                            color: hex('#153788')
                            bold: True
                            halign: "center"
                            font_size: '20sp'

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 33


                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 33

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 15

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 60
                        radius: 10

                        MDLabel:
                            text: 'RESULTADOS'
                            color: 'white'
                            bold: True
                            halign: "center"
                            font_size: '20sp'

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 20

            MDBoxLayout:
                id: TABLE_BOX
                orientation: 'horizontal'
                size_hint_y: 90
                padding: 20, 10, 20, 0
                spacing: 20

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: 65
                    spacing: 20

                    MDAnchorLayout:
                        id: data_box

                MDBoxLayout:
                    size_hint_x: 33

                    MDAnchorLayout:
                        id: data_response

        MDBoxLayout:
            id: AREA_DE_BOTOES
            orientation: 'horizontal'
            size_hint_y: 10
            spacing: 20

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: .79
                spacing: 20
                padding: 20, 0, 0, 0

                MDIconButton:
                    icon: "images/icons/update.png"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    icon_size: dp(48)
                    on_release: root.updateButton()

                MDIconButton:
                    icon: "images/icons/consulte.png"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    icon_size: dp(48)
                    on_release: root.consultaButton()

                MDIconButton:
                    icon: "images/icons/response.png"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    icon_size: dp(48)
                    on_release: root.reponseButton()

                MDBoxLayout:
                    size_hint_x: .1

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: .4

                MDIconButton:
                    icon: "images/icons/pdf.png"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    icon_size: dp(48)
                    on_release: root.downloadButton()

                MDBoxLayout:
                    size_hint_x: .15

        MDBoxLayout:
            id: RODAPE
            orientation: 'vertical'
            size_hint_y: 10

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 10
                md_bg_color: 0,0,0,1

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 50
                    padding: 10
                    spacing: 10
                    md_bg_color: 1,1,1,1

                    MDLabel:
                        id: information
                        text: 'APLICAÇÃO EM FASE DE DESENVOLVIMENTO...'
                        color: app.theme_cls.primary_color
                        bold: True
                        halign: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_size: '20sp'

                MDBoxLayout:
                    padding: 7
                    spacing: 10
                    size_hint_y: 50
                    md_bg_color: hex('#153788')

                    MDLabel:
                        id: data
                        color: "white"
                        bold: True
                        halign: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_size: '18sp'

                    MDLabel:
                        id: hora
                        color: "white"
                        bold: True
                        halign: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_size: '18sp'

                    MDLabel:
                        id: user_name
                        color: "white"
                        bold: True
                        halign: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_size: '18sp'

                    MDLabel:
                        id: user
                        color: 1,1,1,1
                        bold: True
                        halign: "center"
                        font_size: '18sp'

                    MDLabel:
                        id: ip_address
                        color: "white"
                        bold: True
                        halign: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_size: '18sp'

                    MDLabel:
                        id: machine
                        color: 1,1,1,1
                        bold: True
                        halign: "center"
                        font_size: '18sp'
