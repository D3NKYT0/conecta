<ContentClientOpen>:
    id: box_open_client
    orientation: "horizontal"
    spacing: 20

    MDBoxLayout:
        id: box_right_client
        size_hint_x: 0.5
        orientation: "vertical"

        MDTextField:
            id: br_cpf
            hint_text: "CPF"

        MDTextField:
            id: br_name
            hint_text: "Nome"

        MDTextField:
            id: br_cep
            hint_text: "CEP"

        MDTextField:
            id: br_logradouro
            hint_text: "Logradouro"

        MDTextField:
            id: br_complemento
            hint_text: "Complemento"

        MDTextField:
            id: br_estado
            hint_text: "Estado"

        MDTextField:
            id: br_municipio
            hint_text: "Municipio"

        MDTextField:
            id: br_bairro
            hint_text: "Bairro"


    MDBoxLayout:
        id: box_left_client
        size_hint_x: 0.5
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y: 0.88
            orientation: "vertical"

            MDTextField:
                id: bl_telefone
                hint_text: "Telefone"

            MDTextField:
                id: bl_celular
                hint_text: "Celular"

            MDTextField:
                id: bl_email 
                hint_text: "Email"

            MDTextField:
                id: bl_linha_de_credito
                hint_text: "Linha de Credito"

            MDTextField:
                id: bl_atividade
                hint_text: "Atividade"
            
            MDTextField:
                id: bl_tempo_de_atividade
                hint_text: "Tempo de Atividade"

            MDTextField:
                id: bl_agente
                hint_text: "Agente"

        MDBoxLayout:
            size_hint_y: 0.12
            orientation: "horizontal"

            MDRaisedButton:
                id: btSaveClient
                text: "Salvar"
                pos_hint: {'center_x': .5, 'center_y': .5}
                md_bg_color: 'green'
                on_release: root.saveClient()

                
